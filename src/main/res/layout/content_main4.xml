<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_share">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

<ImageButton
        android:id="@+id/cliq"
                android:layout_width="50dp"
                android:layout_height="50dp"
android:src="@drawable/ic_cliq1"
        />
        <ImageButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cliq"
                android:layout_centerHorizontal="true"/>
        <ImageButton
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/facebook"
                android:layout_centerHorizontal="true"/>
        <ImageButton
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/instagram"
                android:layout_centerHorizontal="true"/>
        <ImageButton
                android:id="@+id/snapchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatsapp"
                android:layout_centerHorizontal="true"/>
        <ImageButton
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/snapchat"
                android:layout_centerHorizontal="true"/>
        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="70dp"
                android:layout_height="150dp"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"
                app:lottie_autoPlay="true"
                app:lottie_fileName="roll.json"
                android:layout_toEndOf="@+id/facebook"
                android:layout_alignParentTop="true"
                android:layout_marginTop="483dp"
                android:layout_marginStart="-6dp"/>

    </RelativeLayout>


</ScrollView>